extends layout

block content
  h1 Edit Product

  form(method="POST", action=`/products/${product.id}?_method=PUT`)
    .form-group
      label(for="title") Title
      input.form-control(type="text", name="title", value=product.title, required)

    .form-group
      label(for="description") Description
      textarea.form-control(name="description", rows="5", required)= product.description

    .form-group
      label(for="stock") Stock
      input.form-control(type="number", name="stock", value=product.stock, required)

    .form-group
      label(for="expired") Expired Date
      input.form-control(type="date", name="expired", value=product.expired, required)

    button.btn.btn-success(type="submit") Update Product
