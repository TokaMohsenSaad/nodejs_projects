extends layout

block content
  h1 Create New Product

  form(method="POST", action="/products")
    .form-group
      label(for="title") Title
      input.form-control(type="text", name="title", required)

    .form-group
      label(for="description") Description
      textarea.form-control(name="description", rows="5", required)

    .form-group
      label(for="stock") Stock
      input.form-control(type="number", name="stock", required)

    .form-group
      label(for="expired") Expired Date
      input.form-control(type="date", name="expired", required)

    button.btn.btn-success(type="submit") Create
